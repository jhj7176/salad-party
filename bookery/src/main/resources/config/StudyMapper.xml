<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="co.salpa.bookery.model.StudyDao">

	<select id="selectAll" resultType="studyBean">
		select * from study
	</select>

	<select id="selectOne" resultType="studyBean"
		parameterType="_int">
		select * from study where book_bid=#{book_bid}
	</select>

	<select id="selectOneByUserId" resultType="studyBean"
		parameterType="_int">
		select * from study where user_id=#{user_id}
	</select>

	<insert id="insertOne" parameterType="studyBean">
		insert into study
		(book_bid, user_id) values (#{book_bid},#{user_id})
	</insert>
	
	<insert id="insertAll" parameterType="studyBean">
		insert into study (updatetime, startdate , enddate, type, memo) 
		values (#{updatetime}, #{startdate} , #{enddate}, #{type}, #{memo})) where id=#{id}
	</insert>

	<update id="updateTypeChap" parameterType="_int">
		update salpa.study set type='chap' where study.id=#{id}
	</update>

	<update id="updateTypePage" parameterType="_int">
		update salpa.study set type='page' where study.id=#{id}
	</update>
</mapper>